{
  "name": "react-babel-webpack",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --hot --inline --history-api-fallback",
    "lint:css": "stylelint ./src/**/*.css",
    "lint:js": "xo",
    "build": "NODE_ENV=production webpack",
    "debug": "webpack --watch --progress",
    "deploy": "yarn build && gh-pages -d dist",
    "test": "NODE_ENV=test NODE_PATH=src ava --verbose",
    "cover": "nyc --reporter=lcov --reporter=text yarn test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^6.5.4",
    "ava": "^0.17.0",
    "axios": "^0.15.3",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.26.1",
    "enzyme": "^2.7.1",
    "eslint-config-xo-react": "^0.10.0",
    "eslint-plugin-react": "^6.9.0",
    "extract-text-webpack-plugin": "2",
    "gh-pages": "^0.12.0",
    "html-webpack-plugin": "^2.24.1",
    "jsdom": "^9.9.1",
    "nyc": "^10.1.2",
    "postcss-custom-properties": "^5.0.1",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.2.2",
    "postcss-nested": "^1.0.0",
    "react-addons-test-utils": "^15.4.2",
    "react-hot-loader": "^1.3.1",
    "style-loader": "^0.13.1",
    "stylelint-webpack-plugin": "^0.5.1",
    "superagent-jsonp": "^0.1.1",
    "webpack": "2",
    "webpack-dev-server": "2"
  },
  "dependencies": {
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-infinite-scroller": "^1.0.4",
    "react-router": "^3.0.2",
    "superagent": "^3.3.2",
    "xo": "^0.17.1"
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "xo-react"
    ]
  },
  "ava": {
    "files": "test/test.js",
    "source": "src/js/**/*.{js,jsx}",
    "babel": "inherit",
    "require": [
      "babel-register",
      "./test/global.setup.js"
    ]
  },
  "nyc": {
    "extension": [
      ".jsx"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "envs": [
      "browser"
    ],
    "space": 2,
    "rules": {
      "quotes": [
        2,
        "double"
      ],
      "react/jsx-space-before-closing": [
        2,
        "always"
      ],
      "react/jsx-equals-spacing": [
        2,
        "never"
      ],
      "no-unused-vars": 1,
      "import/order": 1,
      "import/no-unassigned-import": 1
    }
  }
}
